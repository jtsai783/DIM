{
  "name": "Hello World!",
  "description": "My first Chrome App.",
  "version": "0.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {}, 
  "icons": { "16": "calculator-16.png", "128": "calculator-128.png" },
  "permissions" : [
    "storage",
    "*://*.bungie.net/*",
    "cookies",
    "downloads"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}